<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.myproject.demo.repository.UserRepository">
    <insert id="doJoin" parameterType="map">
        INSERT INTO `user`
        SET regDate = NOW(),
        updateDate = NOW(),
        loginId = #{loginId},
        loginPw = #{loginPw},
        `authLevel` = 3,
        `name` = #{name},
        nickName = #{nickName},
        email = #{email},
        login_type = 'normal'
    </insert>

    <select id="getUserByLoginId" parameterType="String" resultType="org.myproject.demo.vo.User">
        SELECT *
        FROM `user`
        WHERE loginId = #{loginId};
    </select>

    <select id="getUserByNameAndEmail">
        SELECT *
        FROM `user`
        WHERE `name` = #{name}
        AND email = #{email}
    </select>

    <select id="getLastInsertId" parameterType="int">
        SELECT
        LAST_INSERT_ID();
    </select>

    <select id="getUserById" parameterType="int"
            resultType="org.myproject.demo.vo.User">
        SELECT * FROM `user`
        WHERE id = #{loginedUserId}
    </select>

    <update id="modifyWithoutPw">
        UPDATE `user`
        <set>
            <if test="nickName != null">
                nickName = #{nickName},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            updateDate = NOW()
        </set>
        WHERE id = #{loginedUserId}
    </update>

    <update id="modify">
        UPDATE `user`
        <set>
            <if test="loginPw != null">
                loginPw = #{loginPw},
            </if>
            <if test="nickName != null">
                nickName = #{nickName},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            updateDate = NOW()
        </set>
        WHERE id = #{loginedUserId}
    </update>

    <select id="getUserTeamById" parameterType="int"
            resultType="org.myproject.demo.vo.User">
        SELECT U.*, T.team_name AS extra_teamName, T.team_logo AS extra_teamLogo
        FROM `user` AS U
        LEFT JOIN team AS T
        ON U.teamId = T.id
        WHERE U.id= #{loginedUserId};
    </select>

    <select id="getTeamIdByName" parameterType="int"
            resultType="org.myproject.demo.vo.User">
        SELECT id
        FROM team
        WHERE team_name = #{teamName};
    </select>

    <update id="getupdateTeamId">
        UPDATE `user`
        SET teamId = #{teamId}
        WHERE id = #{loginedUserId}
    </update>
</mapper>